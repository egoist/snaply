fonts = 'Open Sans', Helvetica, arial, nimbussansl, liberationsans, freesans, clean, sans-serif, "Segoe UI Emoji", "Segoe UI Symbol"

body
  font 1em/1.7 fonts

.header
  height: 3rem;
  line-height: 3rem;
  background: #f0f0f0;
  border-bottom: 1px solid #d9d9d9;
  position fixed
  top 0
  left 0
  right 0
  z-index 999
  .site-nav
    float: right
    li 
      float left
    a 
      position: relative;
      float: left;
      padding: 0 1.25rem;
      color: inherit;
      text-decoration: none;
      font-size 14px
      &.active
        &:after,&:before
          content: ''
          position: absolute;
          left: 50%;
          bottom: 0;
          width: 0;
          height: 0;
          margin-left: -.375rem;
          border: .375rem solid transparent;
          border-bottom-color: #d4d4d4;
        &:after
          bottom: -1px;
          border-bottom-color: #fff;

.site-title
  font-size inherit
  font-weight bold
  float left
  height 3rem
  margin 0 
  position relative
  a 
    padding 0 1rem

.search-form
  float left
  padding .5rem 0 .5rem .5rem
  width 18rem

.search-input
  outline none
  display: block;
  width: 100%;
  height: 100%;
  height 2rem
  line-height @height
  padding 0 10px
  font-size: .875rem;
  background: #fff;
  border: 1px solid;
  border-color: #d4d4d4;
  border-radius: 3px;
  &:focus
    outline: 0;
    border-color: #35b5f4;
    box-shadow: 0 0 1px #35b5f4;

.preview-area
  display none
  min-height 240px
  padding 20px 0

.page-heading
  white-space: nowrap;
  overflow: hidden;
  word-wrap: normal;
  overflow-wrap: normal;
  &:after
    content: '';
    display: inline-block;
    vertical-align: middle;
    width: 100%;
    height: 1px;
    line-height: 0;
    margin-left: 1rem;
    background: #e5e5e5;

.hr 
  background #e5e5e5
  height 1px
  margin 20px 0

.loading-bar
  z-index 10000

.editor
  outline: none;
  resize: none;
  padding: 20px 0;
  width: 100%;
  border: none;
  font-size: 16px;
  line-height 1.4

.footer 
  padding 30px 0
  margin-top 30px
  border-top 1px solid #e5e5e5

.emojione
  width: 20px;
  vertical-align: middle;
  margin-top: -2px;

.new-text-block
  display none
  margin-left 8px

.markdown-body
  ul
    list-style square
    padding-left 24px

.task-list-items
  list-style none !important
  padding-left 24px !important

.task-list-item
  input 
    margin-right 10px !important

.write-panel
  position: fixed;
  left: 18rem;
  bottom: 0;
  width: 100%;
  background: #f9f9f9;
  box-shadow(inset 0 1px #e3e3e3)
  padding: 5px .5rem;

.dot 
  &:after
    content 'Â·'
    margin 0 3px
    vertical-align middle

#preview-toggle
  cursor pointer
  &:hover
    color #778087